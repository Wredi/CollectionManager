<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CollectionManager.ViewModels"
             x:Class="CollectionManager.Pages.CollectionsPage"
             Title="Select Collection">
    <ContentPage.BindingContext>
        <viewModels:CollectionsViewModel/>
    </ContentPage.BindingContext>

    <StackLayout VerticalOptions="Start">
        <StackLayout Orientation="Horizontal">
            <Button Text="Add collection" Command="{Binding AddCollectionCommand}"/>
            <Button Text="Edit collection" Command="{Binding EditSelectedCollectionCommand}"/>
            <Button Text="Delete collection" Command="{Binding DeleteSelectedCollectionCommand}"/>
            <Button Text="Approve collection" Command="{Binding ApproveSelectedCollectionCommand}"/>
        </StackLayout>
        <ListView ItemsSource="{Binding Collections}" ItemSelected="OnItemSelectedChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Border Stroke="#333" StrokeThickness="1">
                            <Label Text="{Binding .}" Padding="5"/>
                        </Border>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>