<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionManager.Pages.CollectionSummaryPage"
             Title="CollectionSummary">
    <StackLayout Orientation="Vertical" Margin="10">
        <StackLayout Orientation="Horizontal" Spacing="5">
            <Label Text="Number of owned items:" FontSize="18"/>
            <Label Text="{Binding OwnedItems}" FontSize="18"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Spacing="5">
            <Label Text="Number of sold items:" FontSize="18"/>
            <Label Text="{Binding SoldItems}" FontSize="18"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Spacing="5">
            <Label Text="Number of items for sale:" FontSize="18"/>
            <Label Text="{Binding ForSaleItems}" FontSize="18"/>
        </StackLayout>
    </StackLayout>
</ContentPage>